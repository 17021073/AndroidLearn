<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="30dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top10"
        android:text="Đăng ký"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top10"
        android:text="@string/intro"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top20"
        android:layout_below="@+id/textView2"
        android:text="Tên người dùng" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Tên người dùng"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView3"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top10"
        android:layout_below="@+id/editText"
        android:text="Email" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/email"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top10"
        android:layout_below="@+id/editText2"
        android:text="Số điện thoại" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/textView5"
        android:id="@+id/editText4"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="số điện thoại"
            android:inputType="phone"
            android:textSize="16dp" />

    </LinearLayout>



    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top10"
        android:layout_below="@+id/editText4"
        android:text="Mật khẩu" />

    <com.google.android.material.textfield.TextInputLayout
        android:hint="password"
        android:id="@+id/textinputlayout"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        android:layout_below="@+id/textView6"
        android:layout_width="match_parent" >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top10"
        android:layout_below="@+id/textinputlayout"
        android:text="Xác nhận mật khẩu" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input1"
        android:hint="password"
        android:layout_below="@+id/textView7"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        android:layout_width="match_parent" >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/dieuKhoan"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_top10"
        android:layout_below="@+id/input1"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Tôi đồng ý các điều khoản và chính sách quyển riêng tư"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dieuKhoan"
        android:layout_marginTop="10dp"
        android:background="@color/design_default_color_primary_dark"
        android:text="Đăng ký"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="15dp" />

</RelativeLayout>